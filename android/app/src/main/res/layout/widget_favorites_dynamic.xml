<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@android:color/white">

    <TextView 
        android:id="@+id/widget_fav_header" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:text="LMC Maps Favoris" 
        android:textStyle="bold" 
        android:textSize="14sp" 
        android:textColor="#333333"/>

    <LinearLayout 
        android:id="@+id/widget_fav_list" 
        android:layout_width="match_parent" 
        android:layout_height="wrap_content" 
        android:orientation="vertical" 
        android:layout_marginTop="6dp">
        
        <!-- RemoteViews-based list: we'll populate up to 5 items programmatically -->
        <TextView 
            android:id="@+id/widget_fav_item_1" 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:padding="8dp" 
            android:text="—" 
            android:textSize="12sp" 
            android:textColor="#666666" 
            android:background="?android:attr/selectableItemBackground" 
            android:clickable="true"/>
        
        <TextView 
            android:id="@+id/widget_fav_item_2" 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:padding="8dp" 
            android:text="—" 
            android:textSize="12sp" 
            android:textColor="#666666" 
            android:background="?android:attr/selectableItemBackground" 
            android:clickable="true"/>
        
        <TextView 
            android:id="@+id/widget_fav_item_3" 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:padding="8dp" 
            android:text="—" 
            android:textSize="12sp" 
            android:textColor="#666666" 
            android:background="?android:attr/selectableItemBackground" 
            android:clickable="true"/>
    </LinearLayout>
</LinearLayout>
