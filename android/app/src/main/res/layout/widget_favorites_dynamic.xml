<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@android:color/white">

    <TextView android:id="@+id/widget_fav_header" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Favoris" android:textStyle="bold"/>

    <LinearLayout android:id="@+id/widget_fav_list" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginTop="6dp">
        <!-- RemoteViews-based list: we'll populate up to 5 items programmatically -->
        <TextView android:id="@+id/widget_fav_item_1" android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="8dp" android:text="—" />
        <TextView android:id="@+id/widget_fav_item_2" android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="8dp" android:text="—" />
        <TextView android:id="@+id/widget_fav_item_3" android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="8dp" android:text="—" />
    </LinearLayout>
</LinearLayout>
