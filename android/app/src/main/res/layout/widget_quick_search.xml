<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@android:color/white">

    <EditText
        android:id="@+id/widget_search_input"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Destination"
        android:inputType="text"
        android:background="@android:drawable/edit_text"
        android:padding="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/widget_mode_transit"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/ic_transit" 
            android:contentDescription="Transit" />

        <ImageButton
            android:id="@+id/widget_mode_bus"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/ic_bus"
            android:contentDescription="Bus" />

        <ImageButton
            android:id="@+id/widget_mode_bike"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/ic_bike"
            android:contentDescription="Bike" />

        <ImageButton
            android:id="@+id/widget_mode_walk"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/ic_walk"
            android:contentDescription="Walk" />
    </LinearLayout>
</LinearLayout>
